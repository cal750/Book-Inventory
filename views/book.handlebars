<div class="book">
    <h2 class="fas fa-book">{{book_name}}</h2>
    <h5 class="">{{author.author_name}}</h5>
    <img class='singleCover' src="{{cover_url}}" alt="{{book_name}}">
</div>
<div>
        <h3 class="text-center">Reviews</h1>
    {{!-- {{#if reviews.text.length}} --}}
        <div>
            {{#each reviews as |review|}}
            <p class="text-left font-weight-bold">{{user.name}}</p> 
            <p class="text-center">{{review.text}}</p>
            {{/each}}
        </div>
    {{!-- {{/if}} --}}

<div class="row justify-content-center">
    <div class="card col-md-6">
      <form class="review-form">
        <div class="m-3">
          <textarea id="review-text" class="comment-body" name="comment-body"></textarea>
            </div>
            <div class="row justify-content-center">
          <button type="submit" id="addReview" class="btn btn-secondary">Add Review</button>
        </div>
      </form>
    </div>
</div>
</div>

<script src="../js/addReview.js"></script>
